
@model LesGamblers.Web.Models.Predictions.CheckPredictionDetailsViewModel

@{
    Layout = null;
}

@if (Model.FinalResult == null)
{
    <br />
    <div class="text-center">
        <h2>There is no such prediction</h2>
    </div>
}
else
{
    <div class="form-group">
        <label class="control-label col-md-2">Actual Result</label>
        <div class="col-md-10">
            @if (Model.ActualResult == null)
            {
                <h4>The game has not finished yet..</h4>
            }
            else
            {            
                <h4>@Html.DisplayFor(model => model.ActualResult, new { @class = "control-label col-md-offset-2 col-md-2 form-control" })</h4>
            }
        </div>
    </div>

    if (Model.ActualGoalscorers != null)
    {
        <div class="form-group">
            <label id="guestTeam" class="control-label col-md-2">Actual Goalscorers</label>
            <div class="col-md-10">
                <h4>@Html.DisplayFor(model => model.ActualGoalscorers, new { @class = "control-label col-md-offset-2 col-md-2 form-control" })</h4>
            </div>
        </div>
    }

    <div class="form-group">
        <label id="guestTeam" class="control-label col-md-2">Predicted result</label>
        <div class="col-md-10">
            <h4>@Html.DisplayFor(model => model.FinalResult, new { @class = "control-label col-md-offset-2 col-md-2 form-control" })</h4>
        </div>
    </div>
    
    if (Model.Goalscorer != null)
    {
        <div class="form-group">
            <label id="guestTeam" class="control-label col-md-2">Predicted Goalscorer</label>
            <div class="col-md-10">
                <h4>@Html.DisplayFor(model => model.Goalscorer, new { @class = "control-label col-md-offset-2 col-md-2 form-control" })</h4>
            </div>
        </div>
    }

    <div class="form-group">
        <label id="guestTeam" class="control-label col-md-2">Points Gained</label>
        <div class="col-md-10">
            <h4>@Html.DisplayFor(model => model.TotalPoints, new { @class = "control-label col-md-offset-2 col-md-2 form-control"})</h4>
        </div>
    </div>
}